      "default": "none"
    },
    {
      "type": "color",
      "id": "background_container",
      "label": "Background container"
    },
    {
      "type": "checkbox",
      "id": "show_dev_only",
      "default": false,
      "label": "Show Dev Only"
    }
  ],
  "blocks": [
    {
      "type": "page",
      "name": "Image block",
      "limit": 2,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Select image"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Image Caption"
        },
        {
          "type": "text",
          "id": "graph_value_1",
          "label": "Graph Value 1"
        },
        {
          "type": "color",
          "id": "graph_color_1",
          "label": "Graph Color 1"
        },
        {
          "type": "text",
          "id": "graph_value_2",
          "label": "Graph Value 2"
        },
        {
          "type": "color",
          "id": "graph_color_2",
          "label": "Graph Color 2"
        },

      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Image Column",
      "blocks": [
        {
          "type": "page"
        }
      ]
    }
  ]
}
